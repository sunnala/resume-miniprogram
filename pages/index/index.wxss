/**index.wxss**/

#head {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #00b38a;
  padding: 5%;
}

#head text {
  color: white;
}

#head-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#head-info text {
  font-size: 75%;
}

#head-icon {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

#head-icon text {
  margin: 5% 5%;
}

#body {
  padding: 5%;
}

.subtitle {
  margin: 3% 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.subtitle view {
  flex: 1;
  height: 1px;
  background-color: #eee;
}

.subtitle text {
  background-color: #eee;
  color: #00b38a;
  margin: 0 1%;
  padding: 1% 8%;
  border-radius: 30px;
}
.skill,.tool {
  font-size: 90%;
  font-weight: 600;
}

.detail{
  font-size: 85%;
  text-indent:0%;
  line-height: 150%
}

.tag {
  float: right;
  font-size: 70%;
  color: #00b38a;
  border: 1px solid #00b38a;
  padding: 0 1%;
  border-radius: 5px;
}

